// Hero section

.hero
  display: -webkit-flex
  display: flex
  height: 100%
  min-height: 560px
  bottom: 0
  padding: 60px 0 0 0
  text-align: center
  background: #272822
  -webkit-align-items: center
  align-items: center
  -webkit-flex-direction: column
  flex-direction: column
  -webkit-justify-content: center
  justify-content: center

  .button
    background: $active-blue
    display: inline-block
    text-align: center
    margin: 5px 15px
    padding: 15px
    font-size: 24px
    color: white
    width: 200px
    &:hover
      border-radius: 2px

  h1
    font:$fonts-hero-heading
    font-size: 130px
    line-height:130px
    color:$colors-hero-primary
    text-shadow: 1px 1px 0px rgba(0,0,0,0.2)
    padding-bottom: 24px
    background: linear-gradient(to right, hsl(240,100%,60%), hsl(180,100%,60%), hsl(120,100%,60%), hsl(60,100%,60%), hsl(0,100%,60%), hsl(300,100%,60%)) center bottom / 100% 2px no-repeat
    span
      font-weight: 700

  h2
    margin:15px auto 0 auto
    font-size: 20px
    line-height:1.5em
    font-weight:bold
    color:$colors-hero-primary
    width:100%

  h3
    margin:0px 0px 5px 0px
    padding:0
    font:$fonts-hero-cta
    font-size:12px
    line-height:12px
    text-transform: uppercase;
    color:$colors-hero-primary

  .container
    display: -webkit-flex
    display: flex
    -webkit-flex-direction: column
    flex-direction: column
    -webkit-justify-content: center
    justify-content: center
    -webkit-align-items: stretch
    align-items: stretch
    max-width: 100%
    width: 100%
    -webkit-flex: 1 1 auto
    flex: 1 1 auto

    .install
      position:relative
      margin:0 auto
      margin-top:40px
      margin-bottom:25px
      text-align:center

      textarea
        outline: 0;
        background: #f5f5f5
        border:1px solid #f5f5f5
        border-radius: 5px
        resize: none
        overflow:hidden
        height:80px
        width:100%
        padding: 23px
        margin-right:10px
        margin-bottom:10px
        font:$fonts-hero-code
        font-size:12px
        selectedBackground($colors-hero-secondary)
        transition(all ease-out 300ms)

        &:focus
          outline: 0;
          boxShadow(inset 0px 0px 2px 0px $colors-hero-secondary)
          border:1px solid $colors-hero-secondary

    a.copy
      font:$fonts-hero-social
      font-size:12px
      margin: 0 0 0 30px
      position:relative
      width:17px
      height:17px
      float:right
      display: inline-block
      color:$colors-hero-primary
      background: url(../images/fpo-copy.png) 0 1px no-repeat

      /** Tooltip notification 'copied' */
      &.copied:before
        border: solid
        border-color: #000 transparent
        border-width: 0px 6px 6px 6px
        bottom: -10px
        content: ""
        left: 25%
        position: absolute
        z-index: 99
      &.copied:after
        font:$fonts-hero-social
        font-size:12px
        background: #000
        background: rgba(0,0,0,0.8)
        border-radius: 5px
        bottom: -35px
        color: #fff
        content: 'Copied!'
        left: -100%
        padding: 5px 15px
        position: absolute
        z-index: 98

  .subscribe
    background-color: rgba(0, 0, 0, 0.8)
    bottom: 0
    display: block
    width: 100%
    height: 70px
    padding: 20px 0
    margin: 0
    text-align: center
    -webkit-flex: 0 0 auto
    flex: 0 0 auto
    input
      border: none
      border-radius: 0
      font-size: 12px
      height: 30px
      width: 200px
      margin: 0
      padding: 0 10px
      background: $colors-background-secondary
    button
      font: $fonts-footer-nav
      margin: 0
      padding: 0 15px
      border: none
      box-shadow: none
      height: 30px
      border-radius: 0
      font-size: 12px
      outline: none
      color: $colors-foreground-secondary
      background: $colors-foreground-primary
      vertical-align: top
      text-transform: uppercase
      &:hover
        opacity: 0.6

  /**
  *  Resize the headings gradually as we scale the window
  */
  @media screen and (max-width: $max-width)
    h1
      font-size: 10vw
      line-height: 10vw
    h2
      font-size: 2vw

  /**
  *  Minimum heading sizes
  */
  @media screen and (max-width: $small-width)
    h1
      font-size: 80px
      line-height: 80px
    h2
      font-size: 18px
      width: 305px
